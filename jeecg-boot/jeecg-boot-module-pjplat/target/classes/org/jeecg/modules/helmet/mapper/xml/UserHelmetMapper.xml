<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.helmet.mapper.UserHelmetMapper">

    <resultMap id="keyValue" type="org.jeecg.modules.project.entity.KeyValue">
        <result column="USERNAME" property="key"/>
        <result column="REALNAME" property="value"/>
    </resultMap>
    <select id="getHelmetOwnerByDeviceSerial" resultMap="keyValue">
select USERNAME,REALNAME from htplat.SYS_USER where USERNAME = (select USERNAME from pjplat.BS_USER_HELMET where DEVICE_SERIAL=#{deviceSerial})
    </select>
</mapper>